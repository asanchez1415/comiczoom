@using prueba.Models;
@{
    //Antiguo intento
}


<div class="container mt-4">
    <div class="row d-flex justify-content-between align-items-center">
        <div class="col-md-3">
            <a href="@Url.Action("ComicsList", "Comics")" class="btn btn-lg btn-secondary">
                <i class="bi bi-arrow-return-left"></i> Volver
            </a>
        </div>

        <div class="col-md-4 d-flex justify-content-end">
            <h3 class="text-white"><b class="text-white">AÑADIR EMPLEADO</b></h3>
        </div>
    </div>
</div>

<hr class="bg-white"/>
<br />

<form method="post" action="/EquipoComic/AddEmpleadoEC" class="container-fluid" id="formulario" onsubmit="return validaForm(this)">
    <h5 class="text-white">Dibujantes</h5>
    <hr class="bg-white" />

   <div class="col mb-3">
            <div class="form-group">
                <select class="selectpicker" id="inpCargo" name="inpCargo" data-width="100%" required >
                    <option value="" selected>Seleccione un cargo *</option>
                    @foreach (TipoEmpleado te in ViewBag.ComboTE)
                    {
                        <option value="@te.IdTE">@te.NomTE</option>
                    }
                </select>
            </div>
   </div>
</form>


