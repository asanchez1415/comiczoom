@using prueba.Models.EquipoComic;
@{
    ViewBag.Title = "Lista Empleados";
    EquipoComic res = new EquipoComic();
    EquipoComic ec = res.ObtenerEquipoComic(ViewBag.Comic)[0];

    EmpleadoEquipoComic res2 = new EmpleadoEquipoComic(); 
}

<link href="~/Src/Css/Lists.css" rel="stylesheet" />


<div class="container">
    <div class="row d-flex justify-content-between">
        <div class="col-md-3">
            <a href="@Url.Action("ComicsList", "Comics")" class="btn btn-lg btn-secondary">
                <i class="bi bi-arrow-return-left"></i> Volver
            </a>
        </div>

        <div class="d-flex justify-content-between mt-5">
            <h2 class="text-white">Equipo Comic @ec.Id</h2>
            <a href="@Url.Content("/EquipoComic/AddEmpleadoEC?idec=" + ec.Id)")" class="btn btn-success d-flex align-items-center" role="button">
                AÑADIR EMPLEADO
            </a>
        </div>

    </div>
</div>

<br />
<hr class="text-white" />

<div>
    <div class="container table-responsive">
        <table class="table table-light table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ROL</th>
                    <th scope="col">RUT</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">ELIMINAR</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EmpleadoEquipoComic emp in res2.ListarEEC(ec.Id))
                    {
                        <tr>
                            <th scope="row">@emp.Id</th>
                            <td>@emp.Rol</td>
                            <td>@emp.Rut</td>
                            <td>@emp.Nombre @emp.Apellido @emp.SegApellido</td>
                            <td>
                                <a href="@Url.Content("/EquipoComic/EliminarEmpleado?id=" + emp.Id + "&idec=" + emp.IdEC)">
                                    <i class="bi bi-x-circle-fill text-danger h4"></i>
                                </a>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>


