@using prueba.Models;
@{
    PrecioSucursal res = new PrecioSucursal();
    PrecioSucursal ps = res.ObtenerPrecioSucursal(ViewBag.PrecioSucursal)[0];

    Branches res2 = new Branches();
    Branches suc = res2.ObtenerSucursal(ps.IdSUC.ToString())[0];
}


<div class="container mt-4">
    <div class="row d-flex justify-content-between align-items-center">
        <div class="col-md-3">
            <a href="@Url.Action("ComicsList", "Comics")" class="btn btn-lg btn-secondary">
                <i class="bi bi-arrow-return-left"></i> Volver
            </a>
        </div>

        <div class="col-md-4 d-flex justify-content-end">
            <h3 class="text-white"><b class="text-white">EDITAR PRECIOS | @suc.Sucursal</b></h3>
        </div>
    </div>
</div>

<hr class="bg-white"/>
<br />

<form method="post" action="/PrecioSucursal/UpdatePrecioSucursal" class="container-fluid" id="formulario">
    <div>
        <div class="col-md-6">
            <h5 class="text-white">PRECIO NORMAL</h5>
            <hr class="bg-white" />

            <div>
                <input value="@ps.Id" type="text" name="inpId" class="form-control d-none">
            </div>

            <div>
                <input value="@ps.IdCOM" type="text" name="inpIdCOM" class="form-control d-none">
            </div>

            <div class="col mb-3">
                <input value="@ps.Normal" type="text" name="inpNormal" class="form-control" placeholder="0" aria-label="First name">
            </div>
        </div>

    </div>

    <div>
        <div class="col-md-6">
            <h5 class="text-white">PRECIO POR MAYOR</h5>
            <hr class="bg-white" />

            <div class="col mb-3">
                <input value="@ps.AlMayor" type="text" name="inpAlMayor" class="form-control" placeholder="0" aria-label="First name">
            </div>
        </div>
    </div>

    <div>
        <div class="col-md-6">
            <h5 class="text-white">PRECIO OFERTA</h5>
            <hr class="bg-white" />

            <div class="col mb-3">
                <input value="@ps.Oferta" type="text" name="inpOferta" class="form-control" placeholder="0" aria-label="First name">
            </div>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <div class="d-grid gap-2">
                <button type="submit" id="btn-guardar" class="btn btn-lg btn-success"><i class="bi bi-save-fill"></i> GUARDAR</button>
            </div>
        </div>
    </div>
</form>


