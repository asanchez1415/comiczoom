@using prueba.Models;
@{
    ViewBag.Title = "Precio Sucursal";

    PrecioSucursal res = new PrecioSucursal();
    List<PrecioSucursal> precios = res.ListarPS(ViewBag.Comic);

    Comic res2 = new Comic();
    Comic com = res2.ObtenerComic(Convert.ToString(ViewBag.Comic))[0];

}

<link href="~/Src/Css/Lists.css" rel="stylesheet" />


<<div class="container">
    <div class="row d-flex justify-content-between">
        <div class="col-md-3">
            <a href="@Url.Action("ComicsList", "Comics")" class="btn btn-lg btn-secondary">
                <i class="bi bi-arrow-return-left"></i> Volver
            </a>
        </div>
        <div class="d-flex justify-content-between mt-5">
            <h2 class="text-white">Precios Sucursal | @com.Nombre</h2>
        </div>
    </div>
</div>

<hr />

<div class="container table-responsive">
    <table class="table table-light table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">SUCURSAL</th>
                <th scope="col">PRECIO NORMAL</th>
                <th scope="col">PRECIO POR MAYOR</th>
                <th scope="col">PRECIO OFERTA</th>
                <th scope="col">EDITAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PrecioSucursal ps in precios)
            {
                <tr>
                    <th scope="row">@ps.Id</th>
                    <td>@ps.Sucursal</td>
                    <td>@ps.Normal</td>
                    <td>@ps.AlMayor</td>
                    <td>@ps.Oferta</td>
                    <td class="text-center">
                        <a href="@Url.Content("/PrecioSucursal/EditPrecioSucursal?id=" + ps.Id)">
                            <i class="bi bi-pencil-square text-primary h4"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


