@using prueba.Models;
@{
    ViewBag.Title = "Proveedores";
}

<link href="~/Src/Css/Lists.css" rel="stylesheet" />

<div class="container">
    <div class="d-flex justify-content-between mt-5">
        <h2 class="text-white">Lista de proveedores</h2>
        <a href="@Url.Action("CreateProvider","Providers")" class="btn btn-success d-flex align-items-center" role="button">
            CREAR PROVEEDOR
        </a>
    </div>

    <hr class="text-white" />

    <form method="post" action="/Providers/ProviderList" class="row">
        <div class="col-sm-3 mb-4">
            <div class="form-group">
                <label for="exampleFormControlInput1" class="form-label text-white">NOMBRE</label>
                <select class="selectpicker" id="nombre" name="nombre" data-live-search="true" data-width="100%">
                    <option value="" selected>Seleccione un nombre</option>
                    @foreach (Proveedor prove in ViewBag.ComboNombre)
                    {
                        <option value="@prove.Nombre">@prove.Nombre</option>
                    }
                </select>
            </div>
        </div>
        
        <div class="col-sm-3 mb-4">
            <div class="form-group">
                <label for="exampleFormControlInput1" class="form-label text-white">RUBRO</label>
                <select class="selectpicker" id="rubro" name="rubro" data-width="100%">
                    <option value="" selected>Seleccione un rubro</option>
                    @foreach (Rubros Rub in ViewBag.ComboRub)
                    {
                        <option value="@Rub.IdRUB">@Rub.Rubro</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-sm-3 d-flex align-items-end mb-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Filtrar según parámetros</button>
            </div>
        </div>
    </form>
</div>

<div class="container table-responsive">
    <table class="table table-light table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">NOMBRE</th>
                <th scope="col">DIRECCIÓN</th>
                <th scope="col">F. CREACIÓN</th>
                <th scope="col">RUBRO</th>
                <th scope="col">EDITAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Proveedor Prov in ViewBag.ListPro)
            {
                <tr>
                    <th scope="row">@Prov.Id</th>
                    <td>@Prov.Nombre</td>
                    <td>@Prov.Direccion, @Prov.CMN, @Prov.PRO, @Prov.REG</td>
                    <td>@Prov.fechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>@Prov.RUB</td>
                    <td>
                        <a href="@Url.Content("/Providers/EditProvider?id=" + Prov.Id)">
                            <i class="bi bi-pencil-square text-primary h4"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


