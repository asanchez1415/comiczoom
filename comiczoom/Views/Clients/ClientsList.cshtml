@using prueba.Models;
@{
    ViewBag.Title = "Clientes";
}
<link href="~/Src/Css/Lists.css" rel="stylesheet" />

<div class="container">

    <div class="d-flex justify-content-between mt-5">
        <h2 class="text-white">Lista de clientes</h2>
        <a href="@Url.Action("CreateClient","Clients")" class="btn btn-success d-flex align-items-center" role="button">
            CREAR CLIENTE
        </a>
    </div>
    <hr class="text-white" />

    <form method="post" action="/Clients/ClientsList" class="row">
        <div class="col-sm-3 mb-4">
            <div class="form-group">
                <label for="exampleFormControlInput1" class="form-label text-white">RUT</label>
                <select onchange="alertaFiltros()" class="selectpicker" id="rut" name="Rut" data-live-search="true" data-width="100%">
                    <option value="" selected>Seleccione un rut</option>
                    @foreach (string rut in ViewBag.ComboRut)
                    {
                        <option value="@rut">@rut</option>
}
                </select>
            </div>
        </div>

        <div class="col-sm-3 d-flex align-items-end mb-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Filtrar según parámetros</button>
            </div>
        </div>
    </form>
</div>

<div class="container table-responsive">
    <table class="table table-light table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">RUT</th>
                <th scope="col">NOMBRE</th>
                <th scope="col">DIRECCIÓN</th>
                <th scope="col">TELÉFONO</th>
                <th scope="col">TIPO</th>
                <th scope="col">EDITAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Clients Cli in ViewBag.Clientes)
            {
<tr>
    <th scope="row">@Cli.Id</th>
    <td>@Cli.Rut</td>
    <td>@Cli.Nombre @Cli.SegNombre @Cli.Apellido @Cli.SegApellido</td>
    <td>@Cli.Direccion, @Cli.CMN, @Cli.PRO, @Cli.REG</td>
    <td>@Cli.Telefono</td>
    <td>@Cli.Tipo</td>
    <td>
        <a href="@Url.Content("/Clients/EditClient?id=" + Cli.Id)">
            <i class="bi bi-pencil-square text-primary h4"></i>
        </a>
    </td>
</tr>            }
        </tbody>
    </table>
</div>

